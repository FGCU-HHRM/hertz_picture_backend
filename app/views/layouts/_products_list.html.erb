<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>IC #</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% all_products.each do |a| %>
          <tr>
            <% if a.ic %>
              <td><%= a.ic %></td>
            <% else %>
              <td>Product <%= a.id %></td>
            <% end %>
            <td></td>
            <td><%= link_to 'View', a, class: 'btn btn-xs btn-default' %>
            <%= link_to "Edit", edit_product_path( a ), class: 'btn btn-xs btn-success' %>
            <%= link_to 'Destroy', a, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>